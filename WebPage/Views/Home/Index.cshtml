@{
    ViewData["Title"] = "OnlyDevs - Innovando el Desarrollo";
}

<!-- Sección principal o Hero -->
<div class="hero">
    <h1>🚀 Bienvenido a <span>OnlyDevs</span></h1>
    <p>Transformamos ideas en código, construyendo soluciones innovadoras.</p>
    <!-- Botón de llamada a la acción que lleva al formulario de contacto -->
    <a href="#contact" class="cta-button">Contáctanos</a>
</div>

<!-- Formulario de Contacto -->
<div id="contact" class="contact-form">
    <h3>💬 ¡Hablemos!</h3>
    <form id="contactForm">
        <!-- Campo para el nombre del usuario -->
        <input type="text" name="Name" placeholder="Tu Nombre" required>
        <!-- Campo para el correo electrónico -->
        <input type="email" name="Email" placeholder="Correo Electrónico" required>
        <!-- Área de texto para el mensaje -->
        <textarea name="Message" placeholder="Escribe tu mensaje..." required></textarea>
        <!-- Botón de envío del formulario -->
        <button type="submit">Enviar ✉️</button>
    </form>
    <!-- Mensaje de respuesta tras enviar el formulario -->
    <p id="responseMessage"></p>
</div>

<script>
    // Capturamos el evento de envío del formulario
    document.getElementById("contactForm").addEventListener("submit", function (event) {
        event.preventDefault(); // Evita que la página se recargue al enviar

        let formData = new FormData(this); // Obtenemos los datos del formulario

        // Enviamos los datos al backend mediante una petición fetch
        fetch("/Contact/Submit", {
            method: "POST",
            body: formData
        })
            .then(response => response.json()) // Convertimos la respuesta a JSON
            .then(data => {
                // Mostramos el mensaje de respuesta en el elemento correspondiente
                document.getElementById("responseMessage").innerText = data.message;
            })
            .catch(error => console.error("Error:", error)); // Capturamos y mostramos cualquier error en la consola
    });
</script>
