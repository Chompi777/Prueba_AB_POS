@{
    ViewData["Title"] = "OnlyDevs - Innovando el Desarrollo";
}

<!-- Sección principal o Hero -->
<div class="hero">
    <h1>🚀 Bienvenido a <span>OnlyDevs</span></h1>
    <p>Transformamos ideas en código, construyendo soluciones innovadoras.</p>
    <!-- Botón de llamada a la acción que lleva al formulario de contacto -->
    <a href="#contact" class="cta-button">Contáctanos</a>
</div>

<!-- Formulario de Contacto -->
<div id="contact" class="contact-form">
    <h3>💬 ¡Hablemos!</h3>
    <form id="contactForm">
        <input type="text" name="Name" id="name" placeholder="Tu Nombre" required>
        <input type="email" name="Email" id="email" placeholder="Correo Electrónico" required>
        <textarea name="Message" id="message" placeholder="Escribe tu mensaje..." required></textarea>
        <button type="submit">Enviar ✉️</button>
    </form>
    <p id="responseMessage"></p>
</div>

<script>
    document.getElementById("contactForm").addEventListener("submit", function (event) {
        event.preventDefault(); // Evita que la página se recargue

        let name = document.getElementById("name").value.trim();
        let email = document.getElementById("email").value.trim();
        let message = document.getElementById("message").value.trim();
        let responseMessage = document.getElementById("responseMessage");

        // Validaciones
        if (name === "" || email === "" || message === "") {
            responseMessage.innerText = "⚠️ Todos los campos son obligatorios.";
            responseMessage.style.color = "red";
            return;
        }

        let formData = new FormData(this);

        fetch("/Contact/Submit", {
            method: "POST",
            body: formData
        })
            .then(response => response.json())
            .then(data => {
                responseMessage.innerText = "✅ Tu mensaje ha sido enviado con éxito.";
                responseMessage.style.color = "green";
                document.getElementById("contactForm").reset(); // Limpia el formulario
            })
            .catch(error => {
                responseMessage.innerText = "❌ Ocurrió un error. Intenta nuevamente.";
                responseMessage.style.color = "red";
                console.error("Error:", error);
            });
    });
</script>
